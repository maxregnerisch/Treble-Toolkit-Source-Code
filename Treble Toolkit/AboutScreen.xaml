<Page x:Class="Treble_Toolkit.AboutScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treble_Toolkit"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="565"
      fw:AcrylicWindow.Enabled="True" Background="{DynamicResource SystemAltMediumHighColorBrush}" >

    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Title" Content="Treble Toolkit" Margin="10,10,10,0" VerticalAlignment="Top" Height="35" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Bold" FontSize="20" Grid.ColumnSpan="2"/>
        <Label x:Name="VersionString" Content="Version 21.5.1" Margin="10,45,10,0" VerticalAlignment="Top" Height="25" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Bold" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="Changelog" Margin="10,70,10,10" TextWrapping="Wrap" Foreground="{DynamicResource SystemBaseHighColorBrush}" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" Grid.ColumnSpan="2"><Run Text="Welcome to the new and improved Treble Toolkit!"/><LineBreak/><Run Text="Here's what's new:"/><LineBreak/><Run Text="["/><Run Text="Critical] Completely fixed Treble Toolkit Installer"/><LineBreak/><Run Text="[Critical] Fixed TWRP Install and Boot scripts"/><LineBreak/><Run Text="[Important] Changed the way Treble Toolkit processes commands (now only shows &quot;Flash Finished&quot; after running all of the scripts"/><LineBreak/><Run Text="[Important] "/><Run Text="A lot of b"/><Run Text="ugfixes"/><LineBreak/><Run Text="[Important] Improved stability and speed while navigating between pages"/><LineBreak/><Run Text="[Feature] Added the &quot;More Features&quot; tab"/><LineBreak/><Run Text="[Feature] Re-implemented the &quot;Flash Permissiver&quot; function (under the new &quot;More Features&quot; tab)"/><LineBreak/><Run Text="[Feature] Introduced file size checking functionalities"/><LineBreak/><Run Text="[Feature] Added &quot;Vendor&quot; under &quot;Format Partitions&quot;"/><LineBreak/><Run Text="[Feature] Added transitions to Treble Toolkit"/><LineBreak/><Run Text="[Feature] Added &quot;The Sideloader&quot; that allows you to sideload files to TWRP"/><Run Text=" and even TWRP itself on A/B devices"/><LineBreak/><Run Text="[Feature] Added &quot;About Device&quot; under &quot;More&quot;"/><LineBreak/><Run Text="[Normal] Scrolling has now an optional use (for when the user wants to re-size Treble Toolkit below the recommended and default height values"/><LineBreak/><Run Text="["/><Run Text="Misc"/><Run Text="] Updated dependancies"/><LineBreak/><Run Text="[Misc] Changed the way the About section works"/><LineBreak/><LineBreak Foreground="Black" FontSize="20"/><Run Foreground="White" FontSize="12" Text="©2021 YAG-dev"/><Run Foreground="White" FontSize="12" Text=" · Platform Tools v31.0.0"/></TextBlock>
        <Rectangle Fill="{DynamicResource SystemBaseLowColorBrush}" Height="50" Margin="1,0,10,10" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" VerticalAlignment="Bottom" RadiusY="9.5" RadiusX="9.5" StrokeThickness="2" Grid.Column="1" Grid.Row="1"/>
        <Rectangle Fill="{DynamicResource SystemBaseLowColorBrush}" Height="50" Margin="10,0,1,10" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" VerticalAlignment="Bottom" RadiusY="9.5" RadiusX="9.5" StrokeThickness="2" Grid.Row="1"/>
        <Label Content="Update" Margin="1,0,10,10" VerticalAlignment="Bottom" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" FontSize="16" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Back" Margin="10,0,1,10" VerticalAlignment="Bottom" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" FontSize="16" Grid.Row="1"/>
        <Button x:Name="BackAbout" Content="Button" Margin="10,0,1,10" VerticalAlignment="Bottom" Height="50" Opacity="0" Grid.Row="1" Click="BackAbout_Click"/>
        <Button x:Name="UpdateAbout" Content="Button" Margin="1,0,10,10" VerticalAlignment="Bottom" Height="50" Opacity="0" Grid.Column="1" Grid.Row="1" Click="UpdateAbout_Click"/>
        <Rectangle Fill="{DynamicResource SystemBaseLowColorBrush}" Height="50" Margin="10,0,10,62" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" VerticalAlignment="Bottom" RadiusY="9.5" RadiusX="9.5" StrokeThickness="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Label Content="Discover This Version" Margin="10,0,10,62" VerticalAlignment="Bottom" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" FontSize="16" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Button x:Name="UpdateAbout_Copy" Content="Button" Margin="10,0,10,62" VerticalAlignment="Bottom" Height="50" Opacity="0" Click="DiscoverAbout_Click" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
