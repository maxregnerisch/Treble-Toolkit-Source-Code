<Page x:Class="Treble_Toolkit.OnePlus8"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treble_Toolkit"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="565"
      Title="AboutScreen"
      fw:AcrylicWindow.Enabled="True" Background="{DynamicResource SystemAltMediumHighColorBrush}" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Title" Content="OnePlus 8" Margin="10,10,10,0" VerticalAlignment="Top" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Bahnschrift Semibold" FontSize="24" Grid.ColumnSpan="2"/>
        <Label x:Name="VersionString" Content="Android 10/11 (A/B)" Margin="10,60,10,0" VerticalAlignment="Top" Height="25" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Bahnschrift Semibold" FontSize="16" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="Changelog" Margin="10,90,10,0" TextWrapping="Wrap" Foreground="{DynamicResource SystemBaseHighColorBrush}" FontFamily="Bahnschrift Semibold" Grid.ColumnSpan="2"><Run Foreground="White" FontSize="12" Text="SoC: Qualcomm Snapdragon 8"/><Run Foreground="White" FontSize="12" Text="6"/><Run Foreground="White" FontSize="12" Text="5 (8C/8T)"/><Run Foreground="White" FontSize="12" Text=" With 5G"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Storage + RAM Configuration: "/><Run Foreground="White" FontSize="12" Text="128"/><Run Foreground="White" FontSize="12" Text="G/"/><Run Foreground="White" FontSize="12" Text="8"/><Run Foreground="White" FontSize="12" Text="G, 256G/"/><Run Foreground="White" FontSize="12" Text="12"/><Run Foreground="White" FontSize="12" Text="G"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Back Cameras: "/><Run Foreground="White" FontSize="12" Text="48"/><Run Foreground="White" FontSize="12" Text="MP (Main) + "/><Run Foreground="White" FontSize="12" Text="2"/><Run Foreground="White" FontSize="12" Text="MP ("/><Run Foreground="White" FontSize="12" Text="Macro"/><Run Foreground="White" FontSize="12" Text=")"/><Run Foreground="White" FontSize="12" Text=" + 16MP (Ultrawide)"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Front Camera: 16MP"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Display: "/><Run Foreground="White" FontSize="12" Text="Fluid"/><Run Foreground="White" FontSize="12" Text=" AMOLED ("/><Run Foreground="White" FontSize="12" Text="240"/><Run Foreground="White" FontSize="12" Text="0*1080 @ "/><Run Foreground="White" FontSize="12" Text="9"/><Run Foreground="White" FontSize="12" Text="0Hz) (6,"/><Run Foreground="White" FontSize="12" Text="55"/><Run Foreground="White" FontSize="12" Text="&quot;)"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Battery: "/><Run Foreground="White" FontSize="12" Text="4"/><Run Foreground="White" FontSize="12" Text="300MAh (Non-Removable)"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Misc: USB-C, Mute Switch, FP Sensor"/><Run Foreground="White" FontSize="12" Text=" (In Screen)"/></TextBlock>
        <Rectangle Fill="{DynamicResource SystemBaseLowColorBrush}" Height="50" Margin="2,0,10,10" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" VerticalAlignment="Bottom" RadiusY="9.5" RadiusX="9.5" StrokeThickness="2" Grid.Column="1" Grid.Row="1"/>
        <Rectangle Fill="{DynamicResource SystemBaseLowColorBrush}" Height="50" Margin="10,0,2,10" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" VerticalAlignment="Bottom" RadiusY="9.5" RadiusX="9.5" StrokeThickness="2" Grid.Row="1"/>
        <Label Content="More" Margin="2,0,10,10" VerticalAlignment="Bottom" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Bahnschrift Semibold" FontSize="16" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Back" Margin="10,0,2,10" VerticalAlignment="Bottom" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Bahnschrift Semibold" FontSize="16" Grid.Row="1"/>
        <Button x:Name="BackAbout" Content="Button" Margin="10,0,2,10" VerticalAlignment="Bottom" Height="50" Opacity="0" Grid.Row="1" Click="BackAbout_Click"/>
        <Button x:Name="UpdateAbout" Content="Button" Margin="2,10,10,10" VerticalAlignment="Center" Height="50" Opacity="0" Grid.Column="1" Grid.Row="1" Click="UpdateAbout_Click"/>

    </Grid>
</Page>
