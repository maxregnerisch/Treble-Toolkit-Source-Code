<Page x:Class="Treble_Toolkit.SonyXperia5"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treble_Toolkit"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="565"
      fw:AcrylicWindow.Enabled="True" Background="{DynamicResource SystemAltMediumHighColorBrush}" >

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Title" Content="Sony Xperia 5" Margin="10,10,10,0" VerticalAlignment="Top" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" FontSize="24" Grid.ColumnSpan="2"/>
        <Label x:Name="VersionString" Content="Android 9/10/11 (A/B)" Margin="10,60,10,0" VerticalAlignment="Top" Height="25" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" FontSize="16" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="Changelog" Margin="10,90,10,0" TextWrapping="Wrap" Foreground="{DynamicResource SystemBaseHighColorBrush}" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" Grid.ColumnSpan="2"><Run Foreground="White" FontSize="12" Text="SoC: Qualcomm Snapdragon 8"/><Run Foreground="White" FontSize="12" Text="5"/><Run Foreground="White" FontSize="12" Text="5 (8C/8T)"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Storage + RAM Configuration: "/><Run Foreground="White" FontSize="12" Text="128"/><Run Foreground="White" FontSize="12" Text="G/"/><Run Foreground="White" FontSize="12" Text="6"/><Run Foreground="White" FontSize="12" Text="G"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Back Cameras: "/><Run Foreground="White" FontSize="12" Text="12"/><Run Foreground="White" FontSize="12" Text="MP (Main) + "/><Run Foreground="White" FontSize="12" Text="1"/><Run Foreground="White" FontSize="12" Text="2"/><Run Foreground="White" FontSize="12" Text="MP ("/><Run Foreground="White" FontSize="12" Text="Telephoto"/><Run Foreground="White" FontSize="12" Text=")"/><Run Foreground="White" FontSize="12" Text=" + "/><Run Foreground="White" FontSize="12" Text="12"/><Run Foreground="White" FontSize="12" Text="MP (Ultrawide)"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Front Camera: "/><Run Foreground="White" FontSize="12" Text="8"/><Run Foreground="White" FontSize="12" Text="MP"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Display: "/><Run Foreground="White" FontSize="12" Text="OLED"/><Run Foreground="White" FontSize="12" Text=" ("/><Run Foreground="White" FontSize="12" Text="2"/><Run Foreground="White" FontSize="12" Text="52"/><Run Foreground="White" FontSize="12" Text="0*1080 @ "/><Run Foreground="White" FontSize="12" Text="6"/><Run Foreground="White" FontSize="12" Text="0Hz) (6"/><Run Foreground="White" FontSize="12" Text=",1"/><Run Foreground="White" FontSize="12" Text="&quot;)"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Battery: "/><Run Foreground="White" FontSize="12" Text="3140"/><Run Foreground="White" FontSize="12" Text="MAh (Non-Removable)"/><LineBreak/><Run Foreground="White" FontSize="12" Text="Misc: USB-C, FP Sensor"/></TextBlock>
        <Rectangle Fill="{DynamicResource SystemBaseLowColorBrush}" Height="50" Margin="1,0,10,10" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" VerticalAlignment="Bottom" RadiusY="9.5" RadiusX="9.5" StrokeThickness="2" Grid.Column="1" Grid.Row="1"/>
        <Rectangle Fill="{DynamicResource SystemBaseLowColorBrush}" Height="50" Margin="10,0,1,10" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" VerticalAlignment="Bottom" RadiusY="9.5" RadiusX="9.5" StrokeThickness="2" Grid.Row="1"/>
        <Label Content="More" Margin="1,0,10,10" VerticalAlignment="Bottom" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" FontSize="16" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Back" Margin="10,0,1,10" VerticalAlignment="Bottom" Height="50" Foreground="{DynamicResource SystemBaseHighColorBrush}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="/gui;component/Fonts/#Bahnschrift Semibold" FontSize="16" Grid.Row="1"/>
        <Button x:Name="BackAbout" Content="Button" Margin="10,0,1,10" VerticalAlignment="Bottom" Height="50" Opacity="0" Grid.Row="1" Click="BackAbout_Click"/>
        <Button x:Name="UpdateAbout" Content="Button" Margin="1,10,10,10" VerticalAlignment="Center" Height="50" Opacity="0" Grid.Column="1" Grid.Row="1" Click="UpdateAbout_Click"/>

    </Grid>
</Page>
